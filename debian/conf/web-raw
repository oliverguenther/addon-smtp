<VirtualHost *:_RAW_PORT_>
  ServerName _HOSTNAME_

  ErrorLog /var/log/apache2/error

  <LocationMatch "/sys">
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
  </LocationMatch>

  <Location />
    ProxyPass http://127.0.0.1:_APP_PORT_/
    ProxyPassReverse http://127.0.0.1:_APP_PORT_/
  </Location>

</VirtualHost>

